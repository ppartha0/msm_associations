<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd><img src="<%= @actor.image_url %>"></dd>
      
      <dt>Count of characters played</dt>
      <dd>
        <%= Character.where({ :actor_id => @actor.id }).count %>
      </dd>
      <dt>Filmography</dt>
      <dd> 
      
        <ul class="list-group">
          
            <% Character.where({ :actor_id => @actor.id }).each do |film| %>
              <li class="list-group-item">
                <a href = "/movies/<%= film.movie_id %>"> <%= Movie.find_by({ :id => film.movie_id}).title %> </a> (<%= film.name %>)
              </li>
            <% end %>
   
        </ul>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
